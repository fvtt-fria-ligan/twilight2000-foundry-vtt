<div class="item item-ammo flexrow" data-item-id="{{id}}">

  <div class="item-name flexrow">
    <img class="item-roll" src="{{img}}" title="{{name}}" width="24" height="24"/>
    <a class="item-roll" title="{{system.itemType}}">{{detailedName}}</a>
  </div>
  {{#with system}}
  {{!-- <div class="item-detail item-quantity">{{qty}}&times;&nbsp;{{ammo.value}}/{{ammo.max}}</div> --}}
  <div class="item-detail item-weight">{{encumbrance}}</div>
  {{/with}}

  <div class="item-controls">
    {{> "systems/t2k4e/templates/actor/parts/slots/slot-buttons.hbs"}}
  </div>

</div>
